<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name"
        android:id="@+id/logo"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/logo"
        android:id="@+id/username"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="textEmailAddress"
            android:id="@+id/activity_login_username"
            android:hint="@string/activity_login_hint_username"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_below="@id/username"
        android:id="@+id/password"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="textPassword"
            android:id="@+id/activity_login_password"
            android:hint="@string/activity_login_hint_password"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/password"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:background="@drawable/activity_login_custom_button"
        android:id="@+id/activity_login_login_button"
        android:text="@string/activity_login_login_button"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Forgot Password?"
        android:textSize="12sp"
        android:layout_below="@id/activity_login_login_button"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:id="@+id/forgot_password"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/activity_login_custom_button"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/forgot_password"
        android:id="@+id/activity_login_ip_address"
        android:text="@string/activity_login_ip_address_button"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Â© All Right Reserved By Xmas Studio"
        android:gravity="center"
        android:textSize="12sp"
        android:padding="5dp"/>

</RelativeLayout>