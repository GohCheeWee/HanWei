<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent_black"
    android:gravity="center"
    android:padding="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/custom_layout_with_shadow"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Leave Remaining"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent_black"
                android:textStyle="bold"
                android:gravity="start"
                android:id="@+id/annual"
                android:text="Annual Leave: 1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent_black"
                android:textStyle="bold"
                android:gravity="start"
                android:id="@+id/sick"
                android:text="Annual Leave: 1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent_black"
                android:textStyle="bold"
                android:gravity="start"
                android:id="@+id/hospitalization"
                android:text="Annual Leave: 1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent_black"
                android:textStyle="bold"
                android:gravity="start"
                android:id="@+id/paternity"
                android:text="Annual Leave: 1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent_black"
                android:textStyle="bold"
                android:gravity="start"
                android:id="@+id/maternity"
                android:text="Annual Leave: 1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent_black"
                android:textStyle="bold"
                android:gravity="start"
                android:id="@+id/emergency"
                android:text="Annual Leave: 1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent_black"
                android:textStyle="bold"
                android:gravity="start"
                android:id="@+id/casual"
                android:text="Annual Leave: 1"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="5dp"
            android:id="@+id/close"
            android:gravity="end" />

    </LinearLayout>

</LinearLayout>
